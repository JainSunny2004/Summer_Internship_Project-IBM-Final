<div class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 movie-card" data-movie-id="<%= movie.id %>">
    <a href="/movies/<%= movie.id %>">
        <img class="rounded-t-lg w-full h-64 object-cover" src="<%= movie.poster_path || 'https://via.placeholder.com/500x750/374151/FFFFFF?text=No+Image' %>" alt="<%= movie.title %>" />
    </a>
    <div class="p-5">
        <a href="/movies/<%= movie.id %>">
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white line-clamp-2"><%= movie.title %></h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 line-clamp-3"><%= movie.overview || 'No description available' %></p>
        
        <div class="flex items-center justify-between mb-3">
            <div class="flex items-center">
                <svg class="w-4 h-4 text-yellow-300 me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                    <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                </svg>
                <span class="text-sm font-medium text-gray-900 dark:text-white"><%= movie.vote_average ? movie.vote_average.toFixed(1) : 'N/A' %></span>
            </div>
            <span class="text-sm text-gray-500 dark:text-gray-400"><%= movie.release_date ? new Date(movie.release_date).getFullYear() : '' %></span>
        </div>

        <% if (movie.genres && movie.genres.length > 0) { %>
            <div class="flex flex-wrap gap-1 mb-3">
                <% movie.genres.slice(0, 3).forEach(genre => { %>
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300"><%= genre.name || genre %></span>
                <% }) %>
            </div>
        <% } %>

        <div class="flex items-center justify-between">
            <a href="/movies/<%= movie.id %>" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                Read more
                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
            
            <% if (typeof user !== 'undefined' && user) { %>
                <button onclick="addToWatchList('<%= movie.id %>', '<%= movie.title %>')" class="text-gray-500 hover:text-red-500 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                </button>
            <% } %>
        </div>
    </div>
</div>
